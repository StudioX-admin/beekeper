# EditorConfig is awesome: https://EditorConfig.org

# 최상위 .editorconfig 파일
root = true

# 모든 파일에 적용
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown 파일
[*.md]
trim_trailing_whitespace = false

# JavaScript, Vue 파일
[*.{js,vue}]
quote_type = single

# JSON 파일
[*.json]
insert_final_newline = false
